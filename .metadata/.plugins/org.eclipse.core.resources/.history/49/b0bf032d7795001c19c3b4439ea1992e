package othello;

import players.Player;

public class Game {
	
	private final Frame[][] frame = new  Frame[8][8];
	
	private Player black;
	private Player white;
	
	public Game(Player player1, Player player2) {
		super();
		
		for (int i = 0 ; i < 8 ; i++) {
			for (int p = 0 ; p < 8 ; p++) {
				frame[i][p] = new Frame();
			}
		}
		
		frame[3][3].setWhite();
		frame[4][4].setWhite();
		frame[3][4].setBlack();
		frame[4][3].setBlack();
		
		this.black = player1;
		this.white = player2;
	}
	
	

}
