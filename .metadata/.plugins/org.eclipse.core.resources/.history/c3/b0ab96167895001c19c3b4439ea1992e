package othello;

import players.Player;

public class Game {
	
	public static final String ANSI_BLACK = "\u001B[30m";
	public static final String ANSI_RED = "\u001B[31m";
	public static final String ANSI_WHITE = "\u001B[37m";
	public static final String ANSI_RESET = "\u001B[0m";
	
	private final Frame[][] frame = new  Frame[8][8];
	
	private Player black;
	private Player red;
	
	public Game(Player player1, Player player2) {
		super();
		
		for (int i = 0 ; i < 8 ; i++) {
			for (int p = 0 ; p < 8 ; p++) {
				frame[i][p] = new Frame();
			}
		}
		
		frame[3][3].setRed();
		frame[4][4].setRed();
		frame[3][4].setBlack();
		frame[4][3].setBlack();
		
		this.black = player1;
		this.red = player2;
	}
	
	public void display() {
		for (int i = 0 ; i < 8 ; i++) {
			for (int p = 0 ; p < 8 ; p++) {
				String color;
				switch (frame[p][i].getState()) {
				case BLACK:
					color = ANSI_BLACK;
					break;
				case RED:
					color = ANSI_BLACK;
					break;
				case EMPTY:
					color = ANSI_BLACK;
					break;
				}
				System.out.print("[]");
			}
		}
	}
	

}
